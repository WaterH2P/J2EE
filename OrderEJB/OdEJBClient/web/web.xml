<?xml version="1.0" encoding="utf-8" ?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <!-- 设置默认界面 -->
    <welcome-file-list>
        <welcome-file>LoginServlet</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>ChEncodeFilter</filter-name>
        <filter-class>main.filters.ChEncodeFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ChEncodeFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>URLFilter</filter-name>
        <filter-class>main.filters.URLFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>URLFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>main.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/OdEJBClient/LoginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ShowMyOrderServlet</servlet-name>
        <servlet-class>main.servlets.ShowMyOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowMyOrderServlet</servlet-name>
        <url-pattern>/OdEJBClient/ShowMyOrderServlet</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>main.listeners.UserCountListener</listener-class>
    </listener>
</web-app>